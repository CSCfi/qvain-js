{
  "root": true,
  "extends": [
    "eslint:recommended",
    "plugin:vue/essential"
  ],
  "env": {
    'browser': true,
    'node': true
  },
  "globals": {
    "APP_DEBUG": true
  },
  rules: {
    'indent': [1, 'tab'],
    'no-tabs': 0,
    'semi': [1, 'never'],
    'semi-spacing': [1, { before: false, after: true }],
    'space-before-blocks': [1, 'always'],
    'space-in-parens': [1, 'never'],
    'no-unused-vars': [1],
    'no-console': 0
  }
}
