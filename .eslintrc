{
  "root": true,
  "lintOnSave": true,
  "extends": [
    "plugin:vue/essential"
  ],
  rules: {
    'indent': ['error', 'tab'],
    'no-tabs': 0,
  	'semi': [2, 'never'],
  	'semi-spacing': [2, { before: false, after: true }],
  	'space-before-blocks': [2, 'always'],
    'space-in-parens': [2, 'never']
  }
}
